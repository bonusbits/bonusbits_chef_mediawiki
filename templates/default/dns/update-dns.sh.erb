#!/usr/bin/env bash

cat <<EOF > /tmp/route53-upsert.json
{
  "Comment": "string",
  "Changes": [
    {
      "Action": "UPSERT",
      "ResourceRecordSet": {
        "Name": "<%= node['bonusbits_mediawiki']['dns']['record_name'] %>",
        "Type": "A",
        "TTL": <%= node['bonusbits_mediawiki']['dns']['ttl'] %>,
        "ResourceRecords": [
          {
            "Value": "$(curl http://169.254.169.254/latest/meta-data/local-ipv4/)"
          }
        ]
      }
    }
  ]
}
EOF

aws route53 change-resource-record-sets --hosted-zone-id "<%= node['bonusbits_mediawiki']['dns']['hosted_zone_id'] %>" --change-batch "file:///tmp/route53-upsert.json"